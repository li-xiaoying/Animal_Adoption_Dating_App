{% extends 'layouts/main.j2' %}
{% block content %} 
    <h2 class="page-name"> Add New Pets </h2>
    {#<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>#}
    <script type=text/javascript src="{{ url_for('static', filename='/admin_new_pets_form.js') }}"></script>
    <div class="container" style="text-align:left; text-indent:50px;">
    <form id="admin_new_pets_form" action="/admin_new_pets" onsubmit="return validateForm()" method="post" enctype="multipart/form-data" required>
       {# <form id="admin_new_pets_form"  action="/admin_new_pets" onsubmit="return validateForm()" method="post" enctype="multipart/form-data" required> #}
            <p>Type: <select name="type">
                <option value="">--Please choose an option--</option>
                <option value="dog">dog</option>
                <option value="cat">cat</option>
                <option value="others">others</option>
                <br></select>
            </p>
            <p>Breed: <input type="text" name="breed"><br></p>
            <p>Name: <input type="text" name="name"><br></p>
            <p>Age (months): <input type="number" name="age" min="0"><br></p>
            <p>Size: <select name="size">
                <option value="small">small (0-25 lbs)</option>
                <option value="medium">medium (26-60 lbs)</option>
                <option value="large">large (61-100 lbs)</option>
                <option value="extra large">extra large (101 lbs or more)</option>
                <br></select>
            </p>
            <p>Gender: <select name="gender">
                <option value="male">male</option>
                <option value="female">female</option>
                <br></select>
            </p>
            <p>Good with kids: <select name="goodWithKids">
                <option value="1">yes</option>
                <option value="0">no</option>
                <br></select>
            </p>
            <p>Good with other dogs: <select name="goodWithDogs">
                <option value="1">yes</option>
                <option value="0">no</option>
                <br></select>
            </p>
            <p>Good with other cats: <select name="goodWithCats">
                <option value="1">yes</option>
                <option value="0">no</option>
                <br></select>
            </p>
            <p>Must be leashed: <select name="mustBeLeashed">
                <option value="1">yes</option>
                <option value="0">no</option>
                <br></select>
            </p>
            <p>Availability: <select name="availability">
                <option value="available">available</option>
                <option value="pending">pending</option>
                <option value="adopted">adopted</option>
                <br></select>
            </p>
            <p>Photo: <input type="file" accept=".jpg,.jpeg,.png,.bmp" name="img"></p>
            <br>
            <p><input type="submit" value="Add new pet" class="input-btn" style="position:relative; left:80px;"></p>
        </form>
    <div>
{% endblock %}
